<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="SchedVis">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>cz.muni.fi.spc.SchedVis.model.entities.MachineGroup</class>
    <class>cz.muni.fi.spc.SchedVis.model.entities.Machine</class>
    <class>cz.muni.fi.spc.SchedVis.model.entities.EventType</class>
    <class>cz.muni.fi.spc.SchedVis.model.entities.Event</class>
    <properties>
	    <!--  DB connection -->
	    <property name="hibernate.connection.driver_class" value="SQLite.JDBCDriver" />
	    <property name="hibernate.dialect" value="org.hibernate.dialect.SQLiteDialect" />
	    <!-- Some SQL-related stuff -->
	    <property name="hibernate.show_sql" value="false" />
	    <!-- Caching -->
	    <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
	    <property name="hibernate.cache.use_query_cache" value="false" />
      <property name="hibernate.cache.use_second_level_cache" value="false" />
    </properties>
	</persistence-unit>
</persistence>
